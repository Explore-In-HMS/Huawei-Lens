<resources>

    <style name="MaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:popupMenuStyle">@style/menuStyle</item>
        <item name="android:dropDownListViewStyle">@style/menuStyle</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/menuStyle</item>
        <item name="android:textAppearanceLargePopupMenu">@style/menuStyle</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>


    <style name="TextAppearance.Lens.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/din_pro</item>
        <item name="fontFamily">@font/din_pro</item>
        <item name="android:textSize">96sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Lens.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:fontFamily">@font/din_pro</item>
        <item name="fontFamily">@font/din_pro</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Lens.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/din_pro</item>
        <item name="fontFamily">@font/din_pro</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Lens.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:fontFamily">@font/din_pro</item>
        <item name="fontFamily">@font/din_pro</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Lens.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/din_pro</item>
        <item name="fontFamily">@font/din_pro</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Lens.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/din_pro</item>
        <item name="fontFamily">@font/din_pro</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Lens.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/din_pro</item>
        <item name="fontFamily">@font/din_pro</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Lens.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/din_pro</item>
        <item name="fontFamily">@font/din_pro</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>



    <!--text and image -->
    <style name="text_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="common_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.25dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:background">@color/common_line_color</item>
    </style>

    <style name="progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="menuStyle">
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textSize">@dimen/text_size_11sp</item>
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/MyDialogAnim</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="MyDialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
    </style>

    <style name="translateModelManageDialogStyle" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dscTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/white</item>

    </style>

    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="SeekBarTheme" parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/colorPrimaryText</item>
    </style>

    <!--Form recognition -->
    <style name="Fr_ProgressBar" >
        <item name="colorAccent">@color/colorGray</item>
    </style>

</resources>
