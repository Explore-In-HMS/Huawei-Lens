<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical">



    <TextView

        android:id="@+id/fr_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:text="\n\n\t\t\tTable couldn't recognized. Make sure your image meets\n\t these requirements :\n\n\t\t- The horizontal tilt angle is less than 5 degrees.\n\n\t\t- No missing corners and no bent or segmented lines.\n
\n\t\t - The text in the form is horizontal and the color contrast\n\t between the form background and lines is high. Only printed\n\t text can be recognized and images, formulas, handwritten\n\t characters, seals, and watermarks in the form\n\t cannot be recognized.
\n\n\t\t - The aspect ratio of an image must be less than or equal to 3:1.\n\t The resolution must be greater than 960 x 960 px.\n\t The form occupies more than 60% of the image,\n\t is in the middle of the image, and must not be in an inverted\n\t position.\n\n"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>